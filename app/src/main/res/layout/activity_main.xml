<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2e2e2e"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="bottom|right">

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:lines="1"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_clear"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="CE" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_open"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="(" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_close"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text=")" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_slash"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="/" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_7"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="7" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_8"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="8" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_9"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="9" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_x"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="x" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_4"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="4" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_5"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_6"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="6" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_minus"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="-" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_1"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_2"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_3"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_plus"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="+" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_point"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="." />

            </LinearLayout>

            <LinearLayout style="@style/linearUI">

                <TextView
                    android:id="@+id/btn_0"
                    style="@style/textUI"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_remove"
                style="@style/linearUI">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Back" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_answer"
                style="@style/linearUI">

                <TextView
                    style="@style/textUI"
                    android:text="=" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>